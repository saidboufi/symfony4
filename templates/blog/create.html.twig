{% extends 'base.html.twig' %}

{# this tag only applies to the forms defined in this template #}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}

{% if editMode %}
    <h1>Modification d'un article!</h1>
{% else %}
    <h1>Cr√©ation d'un article!</h1>
{% endif %}

{{ form_start(formArticle) }}

    <div>
    {# {{ form_widget(formArticle) }} #}
    </div>
        {# {{form_error(formArticle.title)}} #}
        {{ form_row(formArticle.title, {'attr' : {'placeholder' : "Ici le titre"}}) }}
        
        {{ form_row(formArticle.category) }}

        {{ form_row(formArticle.content, {'attr' : 
                                            {
                                                'placeholder' : "Ici le texte",
                                                'rel' : "Next field",
                                                'rows' : "12"
                                            }
                                          }
                                    ) }}

        <div style="border:1px solid; padding:20px; margin-bottom:30px"> 
        {{ form_row(formArticle.image, {'attr' : {'placeholder' : "Ici l'image"}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>

        <button type="reset" class="btn btn-secondary">Reset</button>


{{ form_end(formArticle) }}

{% endblock %}

